@page "/"
@using ShopOnline.Models.Dtos;
@inherits ProductsBase
<h3>Products</h3>

@if(Products==null){
    <h3>Loading products....</h3>
}else{
    <h3 class="mb-5">Products</h3>

    var productsCount = Products.Count(); 
    @if(productsCount > 0)
    {
        const int itemsPerRow = 4;
        var productRowList = new List<ProductDto>();
        
        @for (int i = 0; i < productsCount; i++)
        {
            //skip the first i * itemsPerRow elements of the Products collection
            //This is done so that the productRowList variable will only contain the elements of the Products collection 
            //that are starting from the i * itemsPerRow element.
            productRowList = Products.Skip(i * itemsPerRow).Take(itemsPerRow).ToList();
            <div class=" row mt-3">
                @foreach(var item in productRowList)
                {
                    <div class="col-md-3">
                        <a href="#">
                            <div class="card">
                                <img class="img-thumbnail" src="@item.ImageURL"/>
                                <div class="card-body">
                                    <h5 class="card-title-3">
                                        @item.Name
                                    </h5>
                                    <p class="card-text">
                                        <b>@item.Price.ToString("C")</b>
                                    </p>
                                </div>
                            </div>
                        </a>
                    </div>
                }
            </div>
        }
    }
}